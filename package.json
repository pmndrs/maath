{
  "name": "@maath/root",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "validate": "preconstruct validate",
    "test": "jest",
    "pub": "./.scripts/publish.sh",
    "postinstall": "preconstruct dev",
    "dev": "yarn workspace demo dev",
    "release": "NODE_ENV=production && yarn build && yarn changeset publish",
    "prepare": "husky install",
    "prettier:fix": "prettier '**/*.ts?(x)' --write"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@changesets/cli": "^2.18.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "babel-jest": "^27.3.1",
    "husky": ">=6",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "semver": "^7.3.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "packageManager": "yarn@2.4.3",
  "lint-staged": {
    "*.{ts,tsx,js,css,md}": "prettier --write"
  },
  "resolutions": {
    "three-stdlib": "https://pkg.csb.dev/pmndrs/three-stdlib/commit/e1dce68d/three-stdlib"
  }
}
